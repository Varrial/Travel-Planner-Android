<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="450dp"
    android:layout_gravity="center_vertical"
    android:elevation="10dp"
    android:background="@drawable/background_pop_up"
    app:circularflow_defaultRadius="25dp">

    <ImageView
        android:id="@+id/priority"
        android:layout_width="100dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_baseline_priority"
        app:tint="#5F8D4E"
        android:layout_margin="8dp"/>

    <TextView
        android:id="@+id/problem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/priority"
        android:layout_centerInParent="true"
        android:layout_marginStart="16sp"
        android:layout_marginTop="16sp"
        android:layout_marginEnd="16sp"
        android:layout_marginBottom="16sp"
        android:text="Did you encounter a technical issue?"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/problem"
        android:layout_centerInParent="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="If you are having some technical problems with the app, please conntact our Development Team"
        android:textAlignment="center"
        android:textSize="14sp" />

    <ImageButton
        android:id="@+id/messButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_baseline_message"
        android:layout_below="@+id/contact"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:background="@null"
        app:tint="#285430"
        android:layout_margin="8dp"/>

</RelativeLayout>